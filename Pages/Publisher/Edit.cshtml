@page
@model Bookshop.Pages.Publisher.Edit
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="card p-4">
        <h2 class="text-center mb-4">Edit Publisher</h2>

        <form method="post">
            <input type="hidden" asp-for="PublisherEdit.PublisherID" />

            <div class="form-group row mb-3">
                <label class="col-sm-2 col-form-label text-right">Publisher ID:</label>
                <div class="col-sm-10">
                    <input class="form-control" readonly asp-for="PublisherEdit.PublisherID" />
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class="col-sm-2 col-form-label text-right" asp-for="PublisherEdit.Name">Name:</label>
                <div class="col-sm-10">
                    <input asp-for="PublisherEdit.Name" class="form-control" />
                    <span asp-validation-for="PublisherEdit.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class="col-sm-2 col-form-label text-right" asp-for="PublisherEdit.Email">Email:</label>
                <div class="col-sm-10">
                    <input asp-for="PublisherEdit.Email" class="form-control" />
                    <span asp-validation-for="PublisherEdit.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class="col-sm-2 col-form-label text-right" asp-for="PublisherEdit.Phone">Phone:</label>
                <div class="col-sm-10">
                    <input asp-for="PublisherEdit.Phone" class="form-control" />
                    <span asp-validation-for="PublisherEdit.Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class="col-sm-2 col-form-label text-right" asp-for="PublisherEdit.Address">Address:</label>
                <div class="col-sm-10">
                    <input asp-for="PublisherEdit.Address" class="form-control" />
                    <span asp-validation-for="PublisherEdit.Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-4">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-page="./Publisher" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>