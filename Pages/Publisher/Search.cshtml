@page
@model Bookshop.Pages.Publisher.Search
@{
    ViewData["Title"] = "Search Publisher";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Search Publisher</h2>

    <div class="card">
        <div class="card-body">
            <form method="post">
                <div class="form-group row mb-3">
                    <label class="col-sm-2 col-form-label text-right" asp-for="PublisherID">Publisher ID:</label>
                    <div class="col-sm-8">
                        <input asp-for="PublisherID" class="form-control" />
                    </div>
                    <div class="col-sm-2 mt-2 mt-sm-0">
                        <button type="submit" class="btn btn-primary">Search</button>
                        <a asp-page="./Publisher" class="btn btn-secondary ml-2">Cancel</a>
                    </div>
                </div>
            </form>

            @if (Model.PublisherSearch != null)
            {
                <h2 class="text-center mt-4">Search Results</h2>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Publisher ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.PublisherSearch.PublisherID</td>
                            <td>@Model.PublisherSearch.Name</td>
                            <td>@Model.PublisherSearch.Email</td>
                            <td>@Model.PublisherSearch.Phone</td>
                            <td>@Model.PublisherSearch.Address</td>
                        </tr>
                    </tbody>
                </table>
            }
            else if (Model.PublisherID != 0)
            {
                <div class="alert alert-warning text-center mt-3" role="alert">
                    No results found. Please enter a valid Publisher ID.
                </div>
            }
        </div>
    </div>
</div>