@page
@model Bookshop.Pages.Books.EditModel
@{
    ViewData["Title"] = "Edit";
}
<style>

    .edit-book{
        color: blue;
    }
</style>
<div class="container mt-5">
    <div class="card p-4">
        <h2 class="text-center mb-4 edit-book">Edit Book</h2>

        <form method="post">
            <input type="hidden" asp-for="BookEdit.BookID" />

            <div class="form-group row mb-3">
                <label class="col-sm-2 col-form-label text-right">Book ID:</label>
                <div class="col-sm-10">
                    <input class="form-control" readonly asp-for="BookEdit.BookID" />
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class="col-sm-2 col-form-label text-right" asp-for="BookEdit.Title">Title:</label>
                <div class="col-sm-10">
                    <input asp-for="BookEdit.Title" class="form-control" />
                    <span asp-validation-for="BookEdit.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class="col-sm-2 col-form-label text-right" asp-for="BookEdit.Author">Author:</label>
                <div class="col-sm-10">
                    <input asp-for="BookEdit.Author" class="form-control" />
                    <span asp-validation-for="BookEdit.Author" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class="col-sm-2 col-form-label text-right" asp-for="BookEdit.Genre">Genre:</label>
                <div class="col-sm-10">
                    <input asp-for="BookEdit.Genre" class="form-control" />
                    <span asp-validation-for="BookEdit.Genre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class="col-sm-2 col-form-label text-right" asp-for="BookEdit.ISBN">ISBN:</label>
                <div class="col-sm-10">
                    <input asp-for="BookEdit.ISBN" class="form-control" />
                    <span asp-validation-for="BookEdit.ISBN" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class="col-sm-2 col-form-label text-right" asp-for="BookEdit.Price">Price:</label>
                <div class="col-sm-10">
                    <input asp-for="BookEdit.Price" class="form-control" />
                    <span asp-validation-for="BookEdit.Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <label class="col-sm-2 col-form-label text-right" asp-for="BookEdit.StockQuantity">Stock Quantity:</label>
                <div class="col-sm-10">
                    <input asp-for="BookEdit.StockQuantity" class="form-control" />
                    <span asp-validation-for="BookEdit.StockQuantity" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mt-4">
                <div class="col-sm-2"></div>
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-page="./Books" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
