@page
@model Bookshop.Pages.Books.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-center">Delete Book</h2>

<div class="d-flex justify-content-center mt-4">
    <div class="card border-danger mb-3" style="width: 40rem;">
        <div class="card-header bg-primary text-white">Delete Confirmation</div>
        <div class="card-body p-5">
            <h5 class="card-title mb-4">Are you sure you want to delete this book?</h5>
            <p class="card-text mb-5">This action cannot be undone.</p>
            <form method="post">
                <input type="hidden" asp-for="BookID" />
                <div class="text-center">
                    <button type="submit" class="btn btn-danger mr-3 px-4 py-2">Delete</button>
                    <a asp-page="./Books" class="btn btn-secondary px-4 py-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
</style>
